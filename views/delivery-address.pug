extends ./layouts/layouts.pug

block title
  | Introduction | Wine 1987

block content
  .container
    include components/_breadcrumb
    section.mb-5
      nav.nav.nav-pills.flex-column.flex-sm-row
        a.rounded-0.flex-sm-fill.text-sm-center.nav-link.active(href='/cart.html') 1. Giỏ hàng
        a.rounded-0.flex-sm-fill.text-sm-center.nav-link.active(href='/delivery-address.html') 2. Địa chỉ giao hàng
        a.rounded-0.flex-sm-fill.text-sm-center.nav-link(href='/payment.html') 3. Thanh toán

    section
      +n-header-title-2("Địa chỉ")
      .row.my-4
        .col-md-6
          h4.text-uppercase Địa chỉ của bạn
        .col-md-6
          a.text-info.ml-auto(href="#")
            u Thêm địa chỉ
      .row
        .col-md-6
          form
            +input-delivery("Tên", "Giang")
            +input-delivery("Họ & tên đệm", "Lê Anh")
            +input-delivery("Công ty", "Cổ phần công nghệ DKT")
            +input-delivery("Địa chỉ", "Tòa nhà Hà Nội Group, 442 Đội Cấn, Ba Đình, Hà Nội")
            +input-delivery("Tên", "Vũ")
            +input-delivery("Thành phố", "Hà Nội")
            +input-delivery("Quốc Tịch", "Việt Nam")
            +input-delivery("Postal/Zip Code", "2300089")
            +input-delivery("Phone", "0974554928")
            .offset-sm-3.form-check.mb-3
              .mx-1
                +checkbox("Đặt làm địa chỉ mặc định")
            .offset-sm-3.d-flex
              a.btn.btn-info.bg-info.mx-1.my-1.rounded-0.text-uppercase(href="payment.html") Giao đến địa chỉ này
              button.btn.btn-primary.mx-1.my-1.rounded-0.text-uppercase sửa địa chỉ
              button.btn.btn-wine.btn-danger.mx-1.my-1.text-uppercase Xoá
        .col-md-6
          form
            +input-delivery("Tên", "Vũ")
            +input-delivery("Họ & tên đệm", "Lê Anh")
            +input-delivery("Công ty", "Cổ phần công nghệ DKT")
            +input-delivery("Địa chỉ", "Tòa nhà Hà Nội Group, 442 Đội Cấn, Ba Đình, Hà Nội")
            +input-delivery("Tên", "Giang")
            .form-group.row
              label.col-sm-3.col-form-label
                | Thành Phố
              .col-sm-9
                select.custom-select
                  each data, key in city
                    option(value=key+1)= data.name
            .form-group.row
              label.col-sm-3.col-form-label
                | Quốc Tịch
              .col-sm-9
                select.custom-select
                  each data, key in country
                    option(value=key+1)= data.name
            +input-delivery("Postal/Zip Code", "2300089")
            +input-delivery("Phone", "0974554928")
            .offset-sm-3.form-check.mb-3
              .mx-1
                +checkbox("Đặt làm địa chỉ mặc định")
            .offset-sm-3.d-flex
              button.btn.btn-info.bg-info.mx-1.my-1.rounded-0.text-uppercase(type="submit") Cập nhật địa chỉ
              button.btn.btn-primary.btn-wine.mx-1.my-1.text-uppercase(type="submit") Thoát
